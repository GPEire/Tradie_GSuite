# Staging Environment Configuration
# Copy this file to .env.staging and update with your actual values

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=staging-api.example.com
DEBUG=False
LOG_LEVEL=INFO

# Google OAuth
GOOGLE_CLIENT_ID=your_staging_google_client_id
GOOGLE_CLIENT_SECRET=your_staging_google_client_secret
GOOGLE_REDIRECT_URI=https://staging-api.example.com/auth/callback

# Gmail API
GMAIL_SCOPES=gmail.readonly,gmail.modify,gmail.labels

# AI Services
OPENAI_API_KEY=your_staging_openai_api_key
ANTHROPIC_API_KEY=your_staging_anthropic_api_key

# Database
DATABASE_URL=postgresql://user:password@staging-db.example.com:5432/tradie_staging

# Security
SECRET_KEY=staging_secret_key_use_strong_key
ENCRYPTION_KEY=staging_encryption_key_use_strong_key

# Frontend
FRONTEND_URL=https://staging.example.com
CHROME_EXTENSION_ID=your_staging_extension_id

