# Production Environment Configuration
# Copy this file to .env.production and update with your actual values
# NEVER commit actual production credentials to Git

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=api.production.example.com
DEBUG=False
LOG_LEVEL=WARNING

# Google OAuth
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_REDIRECT_URI=https://api.production.example.com/auth/callback

# Gmail API
GMAIL_SCOPES=gmail.readonly,gmail.modify,gmail.labels

# AI Services
OPENAI_API_KEY=your_production_openai_api_key
ANTHROPIC_API_KEY=your_production_anthropic_api_key

# Database
DATABASE_URL=postgresql://user:password@production-db.example.com:5432/tradie_production

# Security (MUST use strong, randomly generated keys)
SECRET_KEY=production_secret_key_minimum_32_characters_random
ENCRYPTION_KEY=production_encryption_key_minimum_32_characters_random

# Frontend
FRONTEND_URL=https://production.example.com
CHROME_EXTENSION_ID=your_production_extension_id

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_ID=your_analytics_id

