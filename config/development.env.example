# Development Environment Configuration
# Copy this file to .env and update with your actual values

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=localhost
DEBUG=True
LOG_LEVEL=DEBUG

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Gmail API
GMAIL_SCOPES=gmail.readonly,gmail.modify,gmail.labels

# AI Services
# AI Provider: "openai" (confirmed), "anthropic", or "vertex"
AI_PROVIDER=openai

# OpenAI Configuration (PRIMARY - REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Configuration (Optional - for future use)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=sqlite:///./app.db

# Security (Generate strong keys for production)
SECRET_KEY=dev_secret_key_change_in_production
ENCRYPTION_KEY=dev_encryption_key_change_in_production

# Frontend
FRONTEND_URL=http://localhost:3000
CHROME_EXTENSION_ID=your_extension_id_here

